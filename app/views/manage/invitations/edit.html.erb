<div class="w-100 d-flex flex-row align-items-center" style="<%= @config[:sessions][:background] ? "background: url('#{@config[:sessions][:background]}');background-size: cover;" : "" %>">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card-group">

          <div class="card p-4">
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.hidden_field :invitation_token, readonly: true %>
                <h1><%= t 'manage.sessions.new.register' %></h1>
                <p class="text-muted"><%= t 'manage.sessions.new.setup_password' %></p>

                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fas fa-lock"></i>
                    </div>
                  </div>
                  <%= f.password_field :password, placeholder: (t 'manage.sessions.new.password'), autocomplete: "current-password", class: 'form-control' %>
                </div>

                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fas fa-lock"></i>
                    </div>
                  </div>
                  <%= f.password_field :password_confirmation, placeholder: (t 'manage.sessions.new.password_confirmation'), class: 'form-control' %>
                </div>

                <div class="row">
                  <div class="col-12">
                    <%= f.submit (t 'manage.sessions.new.submit'), class: 'btn btn-primary px-4' %>
                  </div>
                </div>

              <% end %>
            </div>
          </div>

          <div class="card text-white bg-primary py-3 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
              <div>
                <%= image_tag "/#{@config[:scope]}/images/logo.png", width: '35%' %>
                <h2 class="mt-4 mb-3"><%= @config[:sessions][:title] %></h2>
                <p><%= @config[:sessions][:description] %></p>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>