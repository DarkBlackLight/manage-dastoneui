<div class="account-body accountbg" style="background-image: url(<%= @config[:sessions][:background] %>)">
  <div class="container">
    <div class="row vh-100 d-flex justify-content-center">
      <div class="col-12 align-self-center">
        <div class="row">
          <div class="col-lg-5 mx-auto">
            <div class="card">
              <div class="card-body p-0 auth-header-box">
                <div class="text-center p-3">
                  <a href="" class="logo logo-admin">
                    <%= image_tag "/#{@config[:scope]}/images/logo.png", height: '50', alt: 'logo', class: 'auth-logo' %>
                  </a>
                  <h4 class="mt-3 mb-1 fw-semibold text-white font-18"><%= @config[:sessions][:title] %></h4>
                  <p class="text-muted  mb-0"><%= @config[:sessions][:description] %></p>
                </div>
              </div>
              <div class="card-body p-0">
                <div class="tab-content">
                  <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal auth-form' }) do |f| %>
                      <div class="form-group mb-2">
                        <%= f.label :email, class: 'form-label' if @config[:sessions][:authentication_key] == 'email' %>
                        <%= f.label :username, class: 'form-label' if @config[:sessions][:authentication_key] == 'username' %>
                        <%= tag.div class: 'input-group' do %>
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: (t 'manage.sessions.new.enter_email'), class: 'form-control' if @config[:sessions][:authentication_key] == 'email' %>
                          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: (t 'manage.sessions.new.enter_username'), class: 'form-control' if @config[:sessions][:authentication_key] == 'username' %>
                        <% end %>
                      </div>

                      <div class="form-group mb-2">
                        <%= f.hidden_field :source_type, value: @config[:auth_model] ? @config[:auth_model] : 'Admin' %>

                        <%= f.label :password, class: 'form-label' %>

                        <%= tag.div class: 'input-group' do %>
                          <%= f.password_field :password, autocomplete: "current-password", placeholder: (t 'manage.sessions.new.enter_password'), class: 'form-control' %>
                        <% end %>
                      </div>

                      <div class="form-group row my-3">
                        <div class="col-sm-6">
                          <div class="custom-control custom-switch switch-success">
                            <% if devise_mapping.rememberable? %>
                              <%= f.check_box :remember_me, class: "custom-control-input" %>
                              <%= f.label :remember_me, class: "form-label text-muted" %>
                            <% end %>
                          </div>
                        </div>
                        <div class="col-sm-6 text-end">
                          <a href="" class="text-muted font-13"><i class="dripicons-lock"></i>
                            <%= t 'manage.sessions.new.forgot_password' %>
                          </a>
                        </div>
                      </div>

                      <div class="form-group mb-0 row">
                        <div class="col-12">
                          <%= button_tag session_path(resource_name), class: 'btn btn-primary w-100 waves-effect waves-light' do %>
                            <%= (t 'manage.sessions.new.login') %>
                            <i class="fas fa-sign-in-alt ms-1"></i>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="card-body bg-light-alt text-center">
                                    <span class="text-muted d-none d-sm-inline-block"><%= @config[:sessions][:title] %>
                                      Â© <script>
                                        document.write(new Date().getFullYear())
                                    </script>
                                    </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>